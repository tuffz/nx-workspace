{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "chore"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "core",
        "deps",

        "coding-booth-com",
        "ericbuettner-com",

        "character-counter",
        "under-construction",

        "page-home",
        "page-not-found",

        "career-timeline",
        "profile-snapshot",

        "shared-ui-footer",
        "shared-ui-image-embed",
        "shared-ui-social-media-icons",
        "shared-util-location-formatting",

        "ui-anchor",
        "ui-next-link"
      ]
    ]
  }
}
