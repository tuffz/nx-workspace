{
  "name": "coding-booth-com",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/coding-booth-com",
  "projectType": "application",
  "tags": ["type:app", "scope:coding-booth-com"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/coding-booth-com"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/coding-booth-com"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "coding-booth-com:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "coding-booth-com:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "coding-booth-com:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "coding-booth-com:build:production"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "coding-booth-com:build",
        "staticFilePath": "dist/apps/coding-booth-com/out",
        "spa": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/coding-booth-com/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "main",
        "commitMessageFormat": "chore({projectName}): üöÄ release version ${version}",
        "preset": {
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "docs",
              "section": "üìù Documentation"
            },
            {
              "type": "refactor",
              "section": "‚ôªÔ∏è Code Refactoring"
            },
            {
              "type": "perf",
              "section": "‚ö°Ô∏è Performance Improvements"
            },
            {
              "type": "test",
              "section": "‚úÖ Tests"
            }
          ]
        },
        "skipCommitTypes": ["build", "chore", "ci", "docs", "style", "test"]
      }
    }
  }
}
