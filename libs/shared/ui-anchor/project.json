        "jestConfig": "libs/shared/ui-anchor/jest.config.ts"
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "allowEmptyRelease": false,
        "baseBranch": "main",
        "commitMessageFormat": "chore({projectName}): üöÄ release version ${version} [skip ci]",
        "preset": {
          "name": "conventionalcommits",
