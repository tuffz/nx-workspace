{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tuffz/coding-booth/under-construction": [
        "libs/coding-booth-com/under-construction/src/index.ts"
      ],
      "@tuffz/ericbuettner-com/profile-snapshot": [
        "libs/ericbuettner-com/profile-snapshot/src/index.ts"
      ],
      "@tuffz/shared/ui/anchor": ["libs/shared/ui/anchor/src/index.ts"],
      "@tuffz/shared/ui/footer": ["libs/shared/ui/footer/src/index.ts"],
      "@tuffz/shared/ui/image-embed": [
        "libs/shared/ui/image-embed/src/index.ts"
      ],
      "@tuffz/shared/ui/social-media-icons": [
        "libs/shared/ui/social-media-icons/src/index.ts"
      ],
      "@tuffz/utils-locations": ["libs/shared/utils/locations/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
